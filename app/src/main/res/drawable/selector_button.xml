<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFC0CB"/> <!-- pink when pressed -->
            <corners android:radius="12dp"/>
            <stroke
                android:width="2dp"
                android:color="#000000" />
            <corners android:radius="6dp"/>
        </shape>
    </item>

    <!-- Hovered state (API 21+) -->
    <item android:state_hovered="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFC0CB"/> <!-- pink when hovered -->
            <corners android:radius="12dp"/>
            <stroke
                android:width="2dp"
                android:color="#000000" />
            <corners android:radius="6dp"/>
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- white by default -->
            <corners android:radius="12dp"/>
            <stroke
                android:width="2dp"
                android:color="#000000" />
            <corners android:radius="6dp"/>
        </shape>
    </item>

</selector>
